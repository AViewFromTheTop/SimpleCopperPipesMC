{
  "schemaVersion": 1,
  "id": "simple_copper_pipes",
  "version": "${version}",
  "provides": [
    "copper_pipe"
  ],

  "name": "Simple Copper Pipes",
  "description": "Adds Copper Pipes with unique mechanics to Minecraft.",

  "authors": [
    "Luna",
    "Treetrain1"
  ],

  "contact": {
    "homepage": "https://modrinth.com/mod/simple-copper-pipes",
    "issues": "https://github.com/AViewFromTheTop/SimpleCopperPipesMC/issues",
    "sources": "https://github.com/AViewFromTheTop/SimpleCopperPipesMC"
  },

  "license": "MIT",
  "icon": "assets/simple_copper_pipes/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.lunade.copper.SimpleCopperPipes"
    ],
    "client": [
      "net.lunade.copper.SimpleCopperPipesClient"
    ],
    "fabric-gametest": [
      "net.lunade.copper.gametest.SimpleCopperPipesGameTest"
    ],
    "fabric-datagen": [
      "net.lunade.copper.datagen.SimpleCopperPipesDataGenerator"
    ],
    "modmenu": [
      "net.lunade.copper.config.gui.ModMenuIntegration"
    ]
  },

  "mixins": [
    "simple_copper_pipes.mixins.json"
  ],

  "accessWidener": "simple_copper_pipes.accesswidener",

  "depends": {
    "frozenlib": "${frozenlib_version}",
    "fabric-api": "${fabric_api_version}",
    "minecraft": "${minecraft_version}",
    "java": ">=21"
  },

  "suggests": {
    "cloth-config": "*",
    "modmenu": "*"
  },

  "custom": {
    "modmenu": {
      "links": {
        "X": "https://x.com/FB_Oasis",
        "Bluesky": "https://bsky.app/profile/frozenblock.bsky.social",
        "modmenu.discord": "https://discord.gg/frozenblock-modding-oasis-780746010614956112",
        "modmenu.modrinth": "https://modrinth.com/mod/simple-copper-pipes",
        "modmenu.youtube": "https://www.youtube.com/@frozenblockmoddingoasismod",
        "modmenu.kofi": "https://ko-fi.com/frozenblock"
      }
    },
    "frozenlib_registry": {
      "mod_protocol": $protocol_version
    }
  }
}
